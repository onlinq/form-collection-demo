{% extends 'base.html.twig' %}

{% set active_page = app.request.attributes.get('_route')  %}

{% block body %}
  <div class="container">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light my-3">
        <a class="navbar-brand" href="{{ path('homepage') }}">
          Form Collections
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item {% if active_page == 'homepage' %}active{% endif %}">
              <a class="nav-link" href="{{ path('homepage') }}">
                Homepage
                {% if active_page == 'homepage' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item {% if active_page == 'basic_usage' %}active{% endif %}">
              <a class="nav-link" href="{{ path('basic_usage') }}">
                Basic usage
                {% if active_page == 'basic_usage' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            {#
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarOptionsDropdownLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Advanced options
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarOptionsDropdownLink">
                <a class="dropdown-item" href="#">Min &amp; max</a>
                <a class="dropdown-item" href="#">Drag &amp; drop</a>
                <a class="dropdown-item" href="#">Nested collections</a>
              </div>
            </li>
            #}
            <li class="nav-item">
              <a class="nav-link" href="https://www.onlinq.dev">Onlinq</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    {% block content %}
    {% endblock %}
  </div>

  <footer>
    <div class="bg-light">
      <div class="container">
        <div class="d-flex justify-content-between py-3">
          <div>Form Collections by <a href="https://www.onlinq.dev">Onlinq</a>.</div>
          <div>&copy; Onlinq BV</div>
        </div>
      </div>
    </div>
  </footer>
{% endblock %}
